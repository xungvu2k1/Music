<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sky"
    android:orientation="vertical"
    tools:context=".views.music.MusicFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_music_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_sky"
        app:tabSelectedTextColor="@color/orange_red"
        app:tabTextColor="@color/black"
        android:contentDescription="Tablayout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_music_frag"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="RelativeLayout"/>
    </RelativeLayout>

</LinearLayout>